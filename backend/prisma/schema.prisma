generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String?
  email     String      @unique
  password  String
  Blog      Blog[]
  Like      Like[]
  Comment   Comment[]
  SavedBlog SavedBlog[]
}

model Blog {
  id        String      @id @default(uuid())
  title     String
  subTitile String
  content   String
  author    User        @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime    @default(now())
  Like      Like[]
  Comment   Comment[]
  SavedBlog SavedBlog[]
}

model Like {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  blog   Blog   @relation(fields: [blogId], references: [id])
  blogId String
}

model Comment {
  id       String @id @default(uuid())
  content  String
  blog     Blog   @relation(fields: [blogId], references: [id])
  blogId   String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String
}

model SavedBlog {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  blog   Blog   @relation(fields: [blogId], references: [id])
  blogId String
}
